extends layout

block content
    .w3-card-4.w3-margin
        header(class="w3-container w3-teal")
            h3 Student Register Form

        form.w3-container.w3-margin(class='w3-container' method='POST' action='/students')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Identifier / Number
                .w3-col.s9.w3-border
                    input.w3-input(type='text' name='numero' placeholder='Insert student identifier')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Name
                .w3-col.s9.w3-border
                    input.w3-input(type='text' name='nome' placeholder='Insert sudent name')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Git link
                .w3-col.s9.w3-border
                    input.w3-input(type='text' name='git' placeholder='Insert git repository link')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Work assignments
                .w3-col.s9.w3-border
                    each val, key in {1: "Web page", 2: "DTD for Project Record", 3: "DTD and XSLT for Arqueossítios", 4: "nodejs server for Arqueossítios", 5: "nodejs server for Music School", 6: "nodejs server providing an inertface to consume an API", 7: "nodejs server built with express for Students App", 8: "2 nodejs servers, data API and interface"}
                        fieldset
                            legend= 'W' + key + ': ' + val
                            input.w3-check(type='radio' name='tpc'+key value='0' checked)
                            label 0
                            input.w3-check(type='radio' name='tpc'+key value='1')
                            label 1
            
            .w3-row.w3-margin-top
                input.w3-btn.w3-teal(type='submit' value='Adicionar')

        footer(class="w3-container w3-teal")
            address Generated by StudentApp :: 2020-Nov, jcr
