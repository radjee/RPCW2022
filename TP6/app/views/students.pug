extends layout

block content
  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
        button.w3-btn.w3-round-large.w3-white.w3-right.w3-margin
          a(href="/students/register" id="newStudent") Register
        button.w3-btn.w3-round-large.w3-white.w3-right.w3-margin
          a(href="/students/exportCSV") Export
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
            each s in list
              tr
                td= s.numero
                td
                  a(href="/students/"+s._id)= s.nome
                td= s.git
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, jcr

  
