extends layout

block content
  h1.titulo Artistas
  
  div.subMenu
    a.subMenuBotao(href="/") Home 
      i(class="fa-solid fa-house fa-sm")  
    a.subMenuBotao(href="#" onclick="history.back()") Voltar 
      i(class="fa-solid fa-arrow-left fa-sm")  

  div.conteudo
    table#tabela
      tr(class="cabecalho")
        th(class="botao-a" onclick="sortTable(0)") Nome
        th(class="botao-a" onclick="sortTable(1,true)") Albuns 
        th(class="botao-a" onclick="sortTable(2,true)") Musicas
        each a in artistas
          tr(id=""+a._id class="tabela-linha")
            td.foco
              a(class="botao-a" href="/artistas/"+a._id)= a.nome
            td= a.totalAlbuns
            td= a.totalMusicas
            if  user.tipo == "admin" || (user.artista != undefined && user.artista == a._id) || (a.user == user.nome)
              td 
                button(class="botao-tab remover" id=""+a._id) âœ–
  
  script(src="/javascripts/artistas.js")